# =======================
# .env.example (Updated)
# =======================
# Copy this to .env and fill in your actual values

# Application
APP_NAME=University Chatbot
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-this-in-production

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost:3001"]

# Supabase (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Storage Buckets
DOCUMENTS_BUCKET=official-documents
UPLOADS_BUCKET=user-uploads
PROCESSED_BUCKET=processed-content

# AI Providers (At least one required)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
MISTRAL_API_KEY=your-mistral-key

# Conversation Engine
CONVERSATION_ENGINE=langgraph
LANGGRAPH_LLM_PROVIDER=openai
LANGGRAPH_MODEL=gpt-4o-mini

# Vector Search
EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=10
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Feature Flags
ENABLE_DOCUMENT_SEARCH=true
ENABLE_COMPLAINT_PROCESSING=true
ENABLE_REAL_TIME_UPDATES=true

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn

